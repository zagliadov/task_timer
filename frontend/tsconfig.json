{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types" : [ "node" ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false, // ошибка если параметр не используется
    "noUnusedLocals": false, // ошибка если локальная переменная не используется
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "files": [ "./node_modules/@types/node/index.d.ts" ],
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}